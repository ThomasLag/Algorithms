#include <cstdio>
#include <queue>
#include <list>

using namespace std;

const int N = 1000;
const int INF = 987654321;

FILE *in = fopen( "maxflow.in", "r" );
int i, j, n, s, t, u, u1, w, v;
bool *marked, done = false;
int *P;
int E[ N ][ N ], flow[ N ][ N ];
list< pair< int, int > >::iterator it;
pair< int, int > edge;
queue< int > q;

bool bfs() {
    for ( i = 0; i < v; ++i ) {
        marked[ i ] = 0;
    }
    q.push( s );
    marked[ s ] = 1;
    //BFS
    while ( !q.empty() && !done ) {
        u = q.front();
        q.pop();
        for ( i = 0; i < v; ++i ) {
            if ( E[ u ][ i ] - flow[ u ][ i ] > 0 && !marked[ i ] ) {
                q.push( i );
                marked[ i ] = 1;
                P[ i ] = u;
            }
            if ( E[ u ][ i ] - flow[ u ][ i ] <= 0 ) {
                printf( "%i - %i\n", u, i );
            }
        }
    }
    return marked[ t ];
}

int main() {
    fscanf( in, "%i %i", &n, &v, &s, &t );
    marked = new bool[ v ];
    P = new int[ v ];
    for ( i = 0; i < v; ++i ) {
        marked[ i ] = 0;
        P[ i ] = -1;
        for ( j = 0; j < v; ++j ) {
            E[ i ][ j ] = -1;
        }
    }
    for ( i = 0; i < n; ++i ) {
        fscanf( in, "%i %i %i", &u, &u1, &w );
        E[ u ][ u1 ] = w;
    }
    printf( "%i\n", bfs() );

    return 0;
}
